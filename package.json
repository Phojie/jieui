{
  "name": "@nexvelt/ui-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "description": "A Vue 3 UI library built with Vite, TypeScript, and Uno CSS.",
  "author": "Phojie Rengel <phojrengel@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/phojie",
  "homepage": "https://ui.nexvelt.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexvelt/ui.git"
  },
  "bugs": "https://github.com/nexvelt/ui/issues",
  "keywords": [
    "design-system",
    "tailwindcss",
    "unocss",
    "components",
    "ui-library",
    "component",
    "framework",
    "tailwind",
    "theming",
    "postcss",
    "design",
    "css",
    "ui"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rimraf packages/*/dist && esno scripts/copy-files.ts && pnpm -r --filter=./packages/* run build && pnpm -r run build-post",
    "build:packages": "nr --recursive --parallel prepack",
    "deploy": "nr build && pnpm -C docs run docs:build",
    "package:nuxt": "nr --filter @nexvelt/ui-nuxt",
    "dev": "nr --recursive --parallel dev",
    "play": "nr --filter @nexvelt/ui-playground play",
    "docs": "nr --filter @nexvelt/ui-docs docs:dev",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "bumpp package.json packages/**/package.json",
    "start": "echo 'No start script defined'",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clear": "rimraf packages/*/{dist,es,lib}",
    "stub": "pnpm -r --filter=./packages/* --parallel run stub",
    "prepare": "ignore-dependency-scripts \"esno scripts/prepare.ts\"",
    "prepare:theme": "ignore-dependency-scripts \"esno scripts/setup.ts\" pnpm lint:fix"
  },
  "dependencies": {
    "@radix-ui/colors": "^0.1.8",
    "chroma-js": "^2.4.2",
    "ignore-dependency-scripts": "^1.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "@antfu/ni": "^0.21.3",
    "@iconify-json/carbon": "^1.1.17",
    "@iconify-json/simple-icons": "^1.1.55",
    "@nexvelt/ui-preset": "workspace:^",
    "@types/chroma-js": "^2.4.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.3",
    "@unocss/transformer-variant-group": "^0.51.13",
    "@vueuse/core": "^10.1.2",
    "bumpp": "^9.1.0",
    "eslint": "^8.39.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "lint-staged": "^13.2.2",
    "rimraf": "^4.4.1",
    "sass": "^1.62.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1",
    "unocss": "^0.51.13",
    "vitest": "^0.29.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
