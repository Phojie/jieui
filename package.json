{
  "name": "@nexvelt/ui-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "description": "A Vue 3 UI library built with Vite, TypeScript, and Uno CSS.",
  "author": "Phojie Rengel <phojrengel@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/phojie",
  "homepage": "https://ui.nexvelt.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexvelt/nexvelt-ui.git"
  },
  "bugs": "https://github.com/nexvelt/nexvelt-ui/issues",
  "keywords": [
    "design-system",
    "tailwindcss",
    "unocss",
    "components",
    "ui-library",
    "component",
    "framework",
    "tailwind",
    "theming",
    "postcss",
    "design",
    "css",
    "ui"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rimraf packages/*/{dist,es,lib} && pnpm run build:packages",
    "build:packages": "echo 'No build:packages script defined'",
    "dev": "echo 'No dev script defined'",
    "lint": "eslint .",
    "release": "bumpp package.json packages/**/package.json",
    "start": "echo 'No start script defined'",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clear": "rimraf packages/*/{dist,es,lib}"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "@antfu/ni": "^0.21.3",
    "@types/node": "^18.16.3",
    "bumpp": "^9.1.0",
    "eslint": "^8.39.0",
    "lint-staged": "^13.2.2",
    "pnpm": "^8.3.1",
    "rimraf": "^4.4.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.0.4",
    "vitest": "^0.29.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
