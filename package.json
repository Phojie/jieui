{
  "name": "@nexvelt/ui-monorepo",
  "type": "module",
  "version": "0.0.2-beta.3",
  "private": true,
  "packageManager": "pnpm@8.6.12",
  "description": "An Atomic UI/UX Technology",
  "author": "Phojie Rengel <phojrengel@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/phojie",
  "homepage": "https://ui.nexvelt.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexvelt/ui.git"
  },
  "bugs": "https://github.com/nexvelt/ui/issues",
  "keywords": [
    "design-system",
    "tailwindcss",
    "unocss",
    "components",
    "ui-library",
    "component",
    "framework",
    "tailwind",
    "theming",
    "postcss",
    "design",
    "css",
    "ui"
  ],
  "engines": {
    "node": ">=v16.14.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rimraf packages/*/dist && esno scripts/copy-files.ts && pnpm -r --filter=./packages/* run build && pnpm -r run build-post",
    "build:packages": "nr --recursive --parallel prepack",
    "deploy": "nr build && nr docs build",
    "dev": "nr stub && nr --recursive --parallel dev",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "nuxt": "nr --filter @nexvelt/ui-nuxt",
    "docs": "nr --filter @nexvelt/ui-docs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "pnpm test && bumpp -r -x \"pnpm run changelog\" --all && pnpm -r publish",
    "start": "echo 'No start script defined'",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "clear": "rimraf packages/*/{dist,es,lib}",
    "cleanup": "rimraf docs/node_modules node_modules pnpm-lock.yaml packages/**/{node_modules}",
    "stub": "pnpm -r --reverse --filter=./packages/* --parallel run stub",
    "prepare": "ignore-dependency-scripts \"esno scripts/prepare.ts\" && simple-git-hooks"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "ignore-dependency-scripts": "^1.0.1",
    "unocss": "^0.55.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.2",
    "@antfu/ni": "^0.21.5",
    "@iconify/json": "^2.2.103",
    "@nexvelt/ui-preset": "workspace:0.0.2-beta.3",
    "@nuxt/devtools": "^0.8.0",
    "@types/chroma-js": "^2.4.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.0",
    "@unocss/eslint-config": "^0.55.1",
    "@vueuse/core": "^10.3.0",
    "bumpp": "^9.1.1",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "^8.47.0",
    "esno": "^0.17.0",
    "fs-extra": "^11.1.1",
    "lint-staged": "^14.0.0",
    "rimraf": "^5.0.1",
    "sass": "^1.66.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1",
    "vitest": "^0.34.2",
    "vue-tsc": "^1.8.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
