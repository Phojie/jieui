{
  "name": "@una-ui/monorepo",
  "type": "module",
  "version": "0.1.1-beta.1",
  "private": true,
  "packageManager": "pnpm@8.7.6",
  "description": "The Atomic UI Framework",
  "author": "Phojie Rengel <phojrengel@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/phojie",
  "homepage": "https://unaui.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/una-ui/una-ui.git"
  },
  "bugs": "https://github.com/una-ui/una-ui/issues",
  "keywords": [
    "design-system",
    "tailwindcss",
    "unocss",
    "components",
    "ui-library",
    "component",
    "framework",
    "tailwind",
    "theming",
    "postcss",
    "design",
    "css",
    "ui"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rimraf packages/*/dist && ignore-dependency-scripts \"esno scripts/copy-files.ts\" && pnpm -r --filter=./packages/* run build && pnpm -r run build-post",
    "build:packages": "nr --r prepack",
    "deploy": "nr build && nr docs build",
    "dev": "nr stub && nr -r dev",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preset": "nr --filter @una-ui/preset",
    "nuxt": "nr --filter @una-ui/nuxt",
    "docs": "nr --filter @una-ui/docs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "pnpm test && bumpp -r -x \"pnpm run changelog\" --all && pnpm -r publish && tsx scripts/release.ts",
    "start": "echo 'No start script defined'",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "clear": "rimraf packages/*/{dist,es,lib}",
    "cleanup": "rimraf docs/.nuxt docs/node_modules node_modules pnpm-lock.yaml packages/**/{node_modules}",
    "stub": "pnpm -r --filter=./packages/* run stub",
    "postinstall": "npx simple-git-hooks",
    "prepare": "ignore-dependency-scripts \"esno scripts/prepare.ts\" && pnpm -r --filter=./packages/* run stub"
  },
  "dependencies": {
    "@una-ui/nuxt": "workspace:^",
    "@una-ui/preset": "workspace:^",
    "@vercel/analytics": "^1.0.2",
    "chroma-js": "^2.4.2",
    "ignore-dependency-scripts": "^1.0.1",
    "simple-git": "^3.19.1",
    "unocss": "^0.55.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@antfu/ni": "^0.21.8",
    "@iconify/json": "^2.2.118",
    "@nuxt/devtools": "^0.8.4",
    "@types/chroma-js": "^2.4.1",
    "@types/fs-extra": "^11.0.2",
    "@types/markdown-it": "^13.0.1",
    "@types/node": "^20.6.3",
    "@unocss/eslint-config": "^0.55.7",
    "@vueuse/core": "^10.4.1",
    "bumpp": "^9.2.0",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "^8.49.0",
    "esno": "^0.17.0",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "lint-staged": "^14.0.1",
    "mdast-util-to-string": "^4.0.0",
    "pathe": "^1.1.1",
    "rimraf": "^5.0.1",
    "sass": "^1.68.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unbuild": "^1.2.1",
    "unist-util-stringify-position": "^4.0.0",
    "vitest": "^0.34.4",
    "vue-tsc": "^1.8.13"
  },
  "pnpm": {
    "overrides": {
      "vue": "3.3.4",
      "@vue/runtime-core": "3.3.4",
      "node-fetch-native": "1.4.0"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
