{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export (nuxt module)
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "@nexvelt/ui-preset": ["./packages/ui-preset/src/index.ts"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/playground",
    "**/playgrounds",
    "**/docs"
  ]
}
