{
  "compilerOptions": {
    "rootDir": ".", // Required for path aliases (nuxt module)
    "baseUrl": ".", // Required for path aliases (nuxt module)
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export (nuxt module)
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": [
      "node"
    ],
    "noUnusedLocals": true,
    "paths": {
      "@nexvelt/ui-preset": ["./packages/ui-preset/src/index.ts"]
    }
  },
  "exclude": [
    // "**/docs",
    "**/node_modules",
    "**/dist",
    "**/playground"
  ]
}
